{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="text-center mt-5 mb-3">Reset your password</h1>

            {{ form_start(requestForm) }}
                {{ form_widget(requestForm.email) }}
                <div>
                    <p class="text-center text-muted m-2">
                        Enter your email address and we we will send you a
                        link to reset your password.
                    </p>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Send password reset email</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}