{% extends "layouts/base.html.twig" %}

{% block title %}My account{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">My profil</h1>
            <img src="{{ app.user.gravatarUrl(200) }}" alt="{{app.user.fullName}}'s avatar" class="shadow rounded-circle">
            <p class="lead mt-5">{{ app.user.email }}</p>
            <h2>{{ app.user.getFullName }}</h2>
            <p><small>🕐 Account created on {{app.user.createdAt|date('m-d-Y')}}</small></p>
            <p>
                <a href="{{path('app_account_edit')}}">Edit Account</a> | 
                <a href="{{path('app_account_change_password')}}">Change Password</a>
            </p>
        </div>
    </div>

{% endblock %}